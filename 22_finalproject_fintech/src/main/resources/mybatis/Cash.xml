<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hk.fintech.mapper.CashMapper">
	
	<insert id ="addCash">
		INSERT INTO FINTECH_CASH
		VALUES(NULL,#{useremail},#{mdate},#{mio},#{content},#{money})
	</insert>
	
	
	<select id ="Cash" parameterType = "CashDto" resultType="CashDto">
		SELECT MDATE, CONTENT, MIO, MONEY
		FROM FINTECH_CASH
		WHERE USEREMAIL = #{useremail}
	</select>
	
